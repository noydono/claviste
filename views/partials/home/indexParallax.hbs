{{!-- article home --}}

<div class="container">
    <div style="display: flex; flex-direction:column;align-items:center;">
        <h1 class="title">Bienvenue <span class="hide-on-small-only"> sur " the claviste "</span></h1>
        <p style="width: 600px;text-align:justify; max-width:400px">
            The claviste est un site pour partager sur la passion du clavier. Une fois connecté vous pourrez créer un article  le commenter et montré votre intérêt pour <br> des articles avec des likes.
        </p>
    </div>
    <div class="row mt-30" style="display: flex; flex-direction:column;align-items:center;">

        {{#each ArticleVerifReverse}}

        <div class="col s12 m8 mt-20 mb-20" style="margin:0;">
            <div class="card">
                <div class="card-image">
                    <img src="{{cover}}" height="300" alt="clavier mécanique">
                </div>
                <div class="card-content tex-text">
                    <h3 class="card-title tex-text">{{title}}</h3>
                    <h5 style="font-size: 20px;">écrit par {{author}} <span style="color: rgb(122, 122, 122);">le
                            {{activiteDate}}</span> </h5>
                    <p >{{content}}</p>
                </div>
                <div class="card-action">
                    <a href="/article/{{_id}}" class="btn">voir plus</a>
                </div>
            </div>
        </div>
        
        {{/each}}
    </div>

</div>


