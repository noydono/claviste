{{!-- article home --}}
<div class="container">
    <div class="row mt-30">
        <h1 class="title center-align">Dernière Publication</h1>
        {{#each ArticleVerifReverseLast}}
        <a href="/article/{{_id}}">
            <div class="col s12 m6  offset-m3 mt-20 ">
                <div class="card">
                    <div class="card-image">
                        <img src="{{cover}}" height="300" alt="clavier mécanique">
                        <span class="card-title tex-text">{{title}}</span>
                    </div>
                    <div class="card-content tex-text">
                        <p class="truncate">{{content}}</p>
                    </div>
                    <div class="card-action">
                        <span>ecrit par {{author}}</span>
                    </div>
                </div>
            </div>
        </a>
        {{/each}}
    </div>
</div>
<div class="container" >    
    <h1 class="title">Autres Publications</h1>
<div class="row mt-30">
    {{#each ArticleVerifReverse}}
    <a href="/article/{{_id}}">
        <div class="col s12 m6 mt-20 mb-20">
            <div class="card">
                <div class="card-image">
                    <img src="{{cover}}" height="300" alt="clavier mécanique">
                    <span class="card-title tex-text hide-on-med-and-down" style="word-break: break-all; max-width:500px">{{title}}</span>
                    <span class="card-title tex-text show-on-medium-and-down hide-on-med-and-up" style="word-break: break-all; max-width:500px">{{title}}</span>
                </div>
                <div class="card-content tex-text">
                    <p class="truncate">{{content}}</p>
                </div>
                <div class="card-action">
                    <span>ecrit par {{author}}</span>
                </div>
            </div>
        </div>
    </a>
    {{/each}}
</div>

</div>


{{#each dbArticleVerif}}
{{>modal/modalAddCommentaire}}
{{/each}}
