<div class="mt-30 center-align">
  <span class="title">edit Utilisateur</span>
</div>

<form action="/admin/update/user/{{dbUser._id}}" method="POST">
  <div class="row s12 m12 mt-30 card-panel">
    <div class="col s12 m6">
      <div class="row">

        <div class="col s12 input-field">
          <input id="usernameEdit" name="username" type="text" class="validate" value="{{dbUser.username}}">
          <label for="usernameEdit" class="active">Username</label>
        </div>

        <div class="col s12 input-field">
          <input id="emailEdit" name="email" type="email" class="validate" value="{{dbUser.email}}">
          <label for="emailEdit" class="active">E-mail</label>

        </div>

      </div>
    </div>
    <div class="col s12 m6 ">

      <div class=" input-field">
        <div class="select-wrapper">
          <select id="selectRole" name="role">
            <option value="user">user</option>
            <option value="staff">staff</option>
          </select>
        </div>
        <label>role</label>
      </div>

      <div class="input-field">
        <div class="select-wrapper">
          <select id="selectStatus" name="status">
            <option value="active">Active</option>
            <option value="banni">Banni</option>
            <option value="ferme">ferm√©</option>
          </select>
        </div>
        <label>Status</label>
      </div>


    </div>
    <div class="col s12">
      <button type="submit" class="btn indigo">Save changes</button>
      <a class="btn btn-light">Cancel</a>
    </div>
  </div>
</form>




{{!--       script pour changer le seleted suivant le status et 
            role de l'user  
--}}
<script>


  let status = `{{dbUser.status}}`;
  let selectStatus = $('#selectStatus')
  let role = `{{dbUser.role}}`;
  let selectRole = $('#selectRole')

  if (status === 'active') {

    selectStatus.val("active").attr('selected')

  } else if (status = 'banni') {

    selectStatus.val("banni").attr('selected')

  } else if (status = 'ferme') {

    selectStatus.val("ferme").attr('selected')

  }

  if (role === 'user') {

    selectRole.val("user").attr('selected')

  } else if (role = 'staff') {

    selectRole.val("staff").attr('selected')

  }


</script>


