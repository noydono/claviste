<div class="mt-30 center-align"><span class="title">Liste Utilisateur</span></div>

<div class="row s12 m12 mt-30">
    <div class="card ">
        <div class="card-content ">
            <table class="responsive-table">
                <thead>
                    <tr class="none" id="none">
                        <th>Id</th>
                        <th>Pseaudo</th>
                        <th>Date de creation</th>
                        <th>Dernier activiter</th>
                        <th>Verifier</th>
                        <th>role</th>
                        <th>status</th>
                        <th>edit</th>
                        <th>supprimer</th>
                    </tr>
                </thead>

                <tbody>
                    {{#each dbUser}}

                    <tr id="{{status}}" class="{{role}} {{isVerified}}">
                        <td name="id">{{_id}}</td>
                        <td>{{username}}</td>
                        <td>12/14/123</td>
                        <td>12/14/123</td>
                        <td>{{isVerified}}</td>
                        <td>{{role}}</td>
                        <td>
                            
                                <span>{{status}}</span>
                            
                        </td>

                        <form action="/admin/list/user/{{_id}}" method="post">
                            <td><button class="btn-flat" name="edit" value="edit" type="submit"><i
                                        class="fas fa-pen"></i></button></td>
                        </form>
                        <td><a class="modal-trigger" href="#deleteUser{{_id}}">supprimer</a></td> 

                    </tr>
                    <form action="/admin/delete/user/{{_id}}" method="POST">

                        <div id="deleteUser{{_id}}" class="modal" style="height: 20%;">
                            <div class="modal-content">
                                <h4>Voulez-vous vraiment supprimer {{username}}</h4>
                                <p><strong></strong></p>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class=" red waves-effect waves-green btn-flat">supprimer</button>
                                <a href="#!" class="modal-close waves-effect waves-green btn-flat">Annuler</a>
                            </div>
                        </div>

                    </form>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
