<div class="mt-30 center-align">
    <span class="title">edit article non verifier</span>
</div>

<div class="row s12 m12 l12 card-panel mt-30">
    <form action="/admin/update/article/{{dbArticle._id}}" method="POST">

        <div class="row ml-20 mr-20 mt-20">
            <div class="input-field col s12">
                <input name="title" value="{{dbArticle.title}}" id="titleArticleVerif" type="text"
                    class="validate">
                <label for="titleArticleVerif">Title</label>
            </div>
        </div>

        <div class="row ml-20 mr-20">
            <div class="input-field col s12">
                <textarea name="content" id="contentArticleVerif"
                    class="materialize-textarea">{{dbArticle.content}}</textarea>
                <label for="contentArticleVerif">content</label>
            </div>
        </div>

        <div class="row ml-20 mr-20">
            <div class="input-field col s12">
                <input name="author" value="{{dbArticle.author}}" id="authorArticleVerif" type="text"
                    class="validate">
                <label for="authorArticleVerif">author</label>
            </div>
        </div>

        <button type="submit" class="btn waves-effect waves-light btn modal-trigger"
            href="#modal{{dbArticle._id}}">changer les images</button>
        <button type="submit" class="btn right">Valid√©</button>

        <!-- Modal Structure -->
        <div id="modal{{dbArticle._id}}" class="modal">
            <div class="modal-content">
                <h4>Modal Header</h4>
                <p>A bunch of text</p>
            </div>
            <div class="modal-footer">
                <a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a>
            </div>
        </div>

    </form>
</div>