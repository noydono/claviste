<div class="row mt-30 mr-30">
    <div class="col s12 m12">
        <div class="card ">
            <div class="card-content ">
                <span class="card-title">Liste des Article</span>
                <p>I am a very simple card. I am good at containing small bits of information.
                    I am convenient because I require little markup to use effectively.</p>
            </div>
        </div>
    </div>
    <div class="col s12 m12 mt-30">
        <div class="card ">
            <div class="card-content ">
                <table class="responsive-table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>date de publication</th>
                            <th>signalement</th>
                            <th>edit</th>
                            <th>view</th>
                            <th>supprimer</th>
                        </tr>
                    </thead>

                    <tbody>
                        {{#each dbArticle}}
                        <tr>
                            <td>{{_id}}</td>
                            <td>{{title}}</td>
                            <td>12/14/123</td>
                            <td><a href="/admin/list/signale/{{_id}}"><i class="fas fa-eye"></i></a></td>

                            <form action="/admin/list/article/{{_id}}" method="post">
                                <td>
                                    <button class="btn-flat" name="edit" value="edit" type="submit">
                                        <i class="fas fa-pen"></i>
                                    </button>
                                </td>
                            </form>
                            <td><a href="/VerifArticle/{{_id}}"><i class="fas fa-eye"></i></a></td>
                            <td><a class="modal-trigger" href="#delete{{_id}}">supprimer</a></td>

                        </tr>
                        <form action="/admin/delete/article/{{_id}}" method="POST">

                            <div id="delete{{_id}}" class="modal" style="height: 20%;">
                                <div class="modal-content">
                                    <h4>Voulez-vous vraiment supprimer {{title}}</h4>
                                    <p><strong></strong></p>
                                </div>
                                <div class="modal-footer">
                                    <button type="submit"
                                        class=" red waves-effect waves-green btn-flat">supprimer</button>
                                    <a href="#!" class="modal-close waves-effect waves-green btn-flat">Annuler</a>
                                </div>
                            </div>

                        </form>

                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>