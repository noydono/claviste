<div class="container">
    <div class="row mt-30">
        <div class="col s8">
            <h1 class="title">Dernier Article</h1>
            {{#each dbArticleVerif}}
            <div class="col s12 m6 l6">
                <div class="card">
                    <div class="card-image">
                        <img src="{{img}}" alt="clavier mécanique" width="100%" height="100%">
                        <span class="card-title truncate">{{title}}</span>
                    </div>

                    <div class="card-content">
                        <p class="truncate">{{content}}</p>
                    </div>

                    <div class="card-action">
                        <a href="#">par {{author}}</a>
                        <a href="#">Voir l'article</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="col s2 hide-on-med-and-down">
            <h1 class="title">Qui suis-je</h1>
        </div>
    </div>
</div>

