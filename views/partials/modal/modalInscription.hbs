<!-- Modal Create -->
<form action="user/create" method="POST" enctype="multipart/form-data">
  <div id="modalInscription" class="modal">

    <div class="modal-content">

      <div class="col s12 center-align">
        <h2>Inscris-toi</h2>
      </div>


      <div class="col s12">

        <div class="row">
          <div class="input-field col s12">
            <input id="Pseaudo" type="text" name="pseaudo" class="validate autocomplete" required>
            <label for="Pseaudo">Pseaudo</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <input id="email" type="email" name="email" class="validate autocomplete" required>
            <label for="email">Email</label>
          </div>
        </div>


        <div class="row">
          <div class="input-field col s12">
            <input id="password" type="password" name="password" class="validate" required>
            <label for="password">Password</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <input id="passwordVerif" type="password" name="passwordVerif" class="validate" required>
            <label for="passwordVerif">retaper votre password</label>
          </div>
        </div>


      </div>

    </div>

    <div class="modal-footer">
      <button type="submit" class="modal-close waves-effect waves-light btn" >S'inscrire</button>
    </div>

  </div>
</form>


