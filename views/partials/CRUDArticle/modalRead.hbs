<a class="waves-effect waves-light btn modal-trigger" href="#modalRead">read</a>

<div id="modalRead" class="modal">
  <div class="modal-content">

    {{#each dbArticle}}

    <div class="row">
      <div class="card blue-grey darken-1">

        <div class="card-content white-text">
          <span class="card-title">{{title}}</span>
          <p>{{content}}</p>
        </div>
        <form action="article/delete">
          <div class="card-action">
            <a href="#">{{author}}</a>
            <button class="waves-effect waves-light btn" type="submit"><i class="fas fa-trash-alt"></i></button>
          </div>
        </form>
      </div>
    </div>

    {{/each}}

  </div>
  <div class="modal-footer">
    <a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a>
  </div>
</div>