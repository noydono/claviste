<script>
    $("document").ready(function ($) {
        var nav = $('#main-menu-container');
        $(window).scroll(function () {
            if ($(this).scrollTop() > 500) {
                nav.addClass("f-nav");
            } else {
                nav.removeClass("f-nav");
            }
        });
    });
</script>